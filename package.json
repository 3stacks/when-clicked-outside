{
  "name": "@lukeboyle/when-clicked-outside",
  "version": "2.0.7",
  "description": "Micro-library to trigger a callback when a user clicks anything BUT your target element.",
  "main": "index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "prepublishOnly": "npm run build:all",
    "build:all": "npm run build:lib && npm run build:demo",
    "build:lib": "rollup --config rollup.config.js",
    "build:demo": "parcel build ./demo/src/index.html --out-dir ./demo/build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://3stacks@github.com/3stacks/when-clicked-outside.git"
  },
  "author": "Luke Boyle",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/3stacks/when-clicked-outside/issues"
  },
  "homepage": "https://github.com/3stacks/when-clicked-outside#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "node-sass": "^4.5.3",
    "parcel-bundler": "^1.9.7",
    "rollup": "^0.26.1",
    "rollup-plugin-babel": "^4.0.3"
  }
}
